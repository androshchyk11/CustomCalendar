<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exFiveDayLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        app:cardCornerRadius="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/exFiveDayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="4dp"
                android:gravity="center_horizontal|top"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:text="24" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/firstEvent"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginStart="3dp"
                    android:src="@drawable/purple_circle_bg"
                    android:background="@drawable/purple_circle_bg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/secondEvent"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:background="@drawable/purple_circle_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/thirdEvent"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/purple_circle_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/fourthEvent"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/purple_circle_bg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/firstEvent" />

                <View
                    android:id="@+id/fifthEvent"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:background="@drawable/purple_circle_bg"
                    android:layout_marginTop="3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/firstEvent" />

                <View
                    android:id="@+id/sixthEvent"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/purple_circle_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/thirdEvent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>


